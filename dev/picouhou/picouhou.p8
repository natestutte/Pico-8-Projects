function initbullet(x,y)
	bullet={
		x=x,
		y=y,
		cell=002,
		frame=0,
		anim=function(this)
			-- set cell based on frame
			if(flr(this.frame)==1) then
				this.cell=003
			elseif(flr(this.frame)==3) then
				this.cell=004
			else
				this.cell=002
			end
			-- increment frame if allowed
			if(this.frame>4) then
				this.frame=0
			else
				this.frame+=0.1
			end
		end
	}
	return bullet
end
