version 29
__lua__
function createfirework(x,y)
	local fw={}
	fw.x=x
	fw.y=y
	fw.color=rnd(16)-1
	return fw
end

function _init()
	poke(0x5f2d,1)
	poke(0x5f5c,20)
	poke(0x5f5d,20)
	
	fws={}
	cur={}
end

function _draw()
	cls()
	pset(cur.x,cur.y,7)
	
	for a in all(fws) do
		pset(a.x,a.y,4)
	end
end

function _update()
	cur.x=stat(32)
	cur.y=stat(33)
	
	if (btnp(4)) then
		add(fws,createfirework(cur.x,cur.y))
	end
end
